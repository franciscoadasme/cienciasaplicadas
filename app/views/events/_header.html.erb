<header>
  <h1>
    <small><%= format_period @event.start_date, @event.end_date %></small>
    <span class="badge badge-outline-primary"><%= event.event_type.upcase %></span>
    <br>
    <%= event.name %>
  </h1>

  <table class="table-transposed">
    <tbody>
      <tr>
        <th>Patrocinador</th>
        <td><%= event.promoter %></td>
      </tr>
      <tr>
        <th>Lugar de realización</th>
        <td><%= event.location %></td>
      </tr>
    </tbody>
  </table>

  <% if local_assigns.fetch(:show_nav, true) %>
    <nav>
      <ul class="nav nav-tabs nav-tabs-dark">
        <%= nav_item 'Información', event_url(event) %>
      </ul>
    </nav>
  <% end %>

  <% if local_assigns.fetch(:show_actions, true) %>
    <div class="actions">
      <%= btn_to fa_icon(:'id-badge'), registration_event_url(event),
                 class: 'btn-circle btn-primary btn-lg btn-raised', title: 'Registrarse' %>
      <% if event.picture.present? %>
        <%= btn_to fa_icon(:'download'), event.picture.url,
                   class: 'btn-circle btn-info btn-raised', title: 'Descargar afiche' %>
      <% end %>
      <% if current_user.try :super_user? %>
        <%= btn_to fa_icon(:pencil), edit_admin_event_url(event),
                   class: 'btn-circle btn-outline', title: 'Editar' %>
      <% end %>
    </div>
  <% end %>
</header>
