<div class="container container-narrow">
  <%= render 'events/header' %>

  <section class="content">
    <% if speakers.any? %>
      <ul class="list-flex list-flex-col list-flex-col-1">
        <% speakers.each do |speaker| %>
          <li><%= render 'speaker', speaker: speaker %></li>
        <% end %>
      </ul>
    <% else %>
      <p class="lead text-muted text-center">
        Oops... a√∫n no hay invitados listados
      </p>
    <% end %>
  </section>
</div>
