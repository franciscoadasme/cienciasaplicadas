%li.media
  = link_to thesis_url(thesis) do
    = image_tag thesis.pdf_file.url(:thumb), class: 'img-thumbnail img-maxsize', data: {size: 96}

  .media-body
    = link_to thesis.user.display_name, thesis.user
    %br
    %strong= link_to thesis.title, thesis_url(thesis)

    .media-meta
      Aprobada el a√±o
      %strong= thesis.issued
      en
      %em= thesis.institution

    - if thesis.keywords.present?
      %ul.list-inline.list-inline-condensed
        - thesis.keyword_list.each do |keyword|
          %li= content_tag :span, keyword, class: 'label label-secondary'
