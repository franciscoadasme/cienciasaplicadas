<header>
  <nav class="navbar">
    <div class="container">
      <div class="navbar-header">
        <%= link_to 'Doctorado en Ciencias Aplicadas', root_url, class: 'navbar-brand' %>
      </div>

      <ul class="navbar-nav navbar-nav--icons">
        <%= nav_item_icon 'Noticias', :'newspaper-o', :posts %>
