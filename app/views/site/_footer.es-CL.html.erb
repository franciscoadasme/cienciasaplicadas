<footer role="main">
  <div class="container">
    <div class="row">
      <div class="col-xs-7">
        <% if current_page?(root_url) || current_page?(posts_url) %>
          <%= render 'site/footer/links' %>
        <% else %>
          <%= render 'site/footer/posts' %>
        <% end %>
      </div>
      <div class="col-xs-4 col-xs-offset-1">
        <%= render 'site/footer/contactinfo' %>
        <hr/>
        <%= btn_to fa_icon('lock', text: 'Ir a administracion'), admin_path,
                   block: true %>
      </div>
    </div>

    <hr/>

    <div class="copyrightinfo">
      <div class="pull-left">
        &copy; 2017 Universidad de Talca, Chile
      </div>
      <div class="pull-right">
        Disenado y desarrollado por
        <%= link_to 'Francisco Adasme', user_path(:fadasme) %>
      </div>
    </div>
  </div>
</footer>
