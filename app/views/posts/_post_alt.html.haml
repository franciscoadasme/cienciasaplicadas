%li.media
  .pull-left.text-center
    = link_to post.author, class: 'magnifiable' do
      - img_url = display_user_image_url(post.author)
      = autosizing_image_tag img_url, class: 'media-object', size: 48
    - content = pluralize post.view_count, 'visita', 'visitas'
    %p.text-center.text-muted{ title: content }
      %strong= post.view_count

  .media-body
    %h3.media-heading
      = post.title
    %span.media-meta
      - localized_date = I18n.l(post.created_at, format: :abbr_with_day)
      = time_tag post.created_at, localized_date

    - anchor = link_to('seguir leyendo', post_permalink(post))
    = excerpt post.body, omission: anchor, separator: '... ', force: true
