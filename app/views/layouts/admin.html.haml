!!! 5
%html
  %head
    %title= 'Admin'
    = stylesheet_link_tag 'admin', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'admin', 'data-turbolinks-track' => true
    = csrf_meta_tags

  %body.off
    = render 'admin/navbar'
    .container.fadein.scaleInv.anim_1
      / Flash/notification area
      %section.row.fadein.anim_2
        .col-xs-12
          = render 'flashes'
          = content_for :notification

      / Title section
      - unless content_for :no_titlebar
        %section.row.fadein.scaleInv.anim_3
          .col-xs-12
            %h2
              = content_for(:title) || tv('.title', default: params[:action])
              = content_for(:raw_subtitle) || content_tag(:small, content_for(:subtitle) || tv('.subtitle', default: top_level_controller || controller_name))
              - if content_for? :widget
                .pull-right
                  = content_for :widget

      / Main container
      %section.row.fadein.scaleInv.anim_3
        / Content
        .content.fadein.scaleInv.anim_4{ class: "col-xs-#{content_for?(:no_sidebar) ? 12 : 8}" }
          = yield
        / Sidebar
        - unless content_for? :no_sidebar
          .col-xs-4.fadein.scaleInv.anim_4
            = render 'admin/sidebar'

    = fa_icon 'refresh', class: 'loader fa-spin fa-2x hidden'
    = form_tag import_admin_publications_path, id: 'form-publication-import', style: 'display: none' do
      = hidden_field_tag :ris_content
    = debug(params) if Rails.env.development?