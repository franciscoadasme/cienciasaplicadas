- provide :no_titlebar, true
- provide :no_sidebar, true

.col-xs-4.col-sm-offset-4
  .signin-form
    = vertical_form_for resource, as: resource_name, url: session_path(resource_name), wrapper: :default do |f|
      .form-inputs
        = f.input :email, required: false, autofocus: true, hint: ''
        = f.input :password, required: false

      .form-group.form-actions.clearfix
        = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
        = f.submit t('devise.sessions.buttons.submit'), class: 'btn btn-primary pull-right'

    .separator= 'or sign in with'
    = link_to fa_icon('facebook-square', text: 'Facebook'), omniauth_authorize_path(resource_name, :facebook), class: :facebook
    = link_to fa_icon('google-plus-square', text: 'Google'), omniauth_authorize_path(resource_name, :google_oauth2), class: :google

    / = link_to "Forgot your password?", new_password_path(resource_name), class: 'recover'