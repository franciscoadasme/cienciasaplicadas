%header.navbar.navbar-default.navbar-fixed-top
  .container
    .row
      .col-xs-12
        .navbar-header
          = link_to @group.display_name, root_url, class: 'navbar-brand'

        - if current_user
          %ul.nav.navbar-nav.navbar-right
            - if current_user.super_user?
              %li{ class: ('active' if current_page?(new_admin_post_path)) }
                = link_to fa_icon('pencil', text: 'New Post'), new_admin_post_path

              - href = new_message_admin_mailing_list_path MailingList.global
              - unless current_page?(href)
                %li= link_to fa_icon('bullhorn'), href, title: 'Send an announcement'

            %li{ class: ('active' if current_page?(import_admin_publications_path)) }
              = link_to fa_icon('files-o', text: 'Import'), import_admin_publications_path, class: 'btn-publication-import', title: 'Import publications'

            %li.navbar-user-menu.dropdown
              = link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } do
                = autosizing_image_tag display_user_image_url(current_user), size: 32, class: 'navbar-user-avatar'
                %span.caret

              %ul.dropdown-menu
                %li.dropdown-header
                  %strong= current_user.display_name
                  %span.uppercase= current_user.role_name.titleize
                  %br
                  = "via #{current_user.provider.titleize}" if current_user.provider
                %li.divider
                %li
                  = link_to fa_icon('user', text: 'Profile', class: 'icon-fixed-width'), profile_admin_account_path
                %li
                  = link_to fa_icon('cog', text: 'Settings', class: 'icon-fixed-width'), settings_admin_account_path
                %li.divider
                %li
                  = link_to fa_icon('power-off', text: 'Sign out', class: 'icon-fixed-width'), destroy_user_session_path, method: :delete